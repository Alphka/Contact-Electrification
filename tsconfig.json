{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2020",
		"moduleResolution": "Bundler",
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"incremental": true,
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		],
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"typeRoots": [
			"node_modules/@types",
			"src/typings"
		],
		"paths": {
			"@controllers/*": ["./src/controllers/*"],
			"@components/*": ["./src/components/*"],
			"@helpers": ["./src/helpers/index.ts"],
			"@helpers/*": ["./src/helpers/*"],
			"@app/*": ["./src/app/*"]
		},
		"noEmit": true
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"next.config.js",
		".next/types/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
